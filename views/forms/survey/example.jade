doctype html
html(lang='en')
  head
    title Tabgrid | Feedback

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

    link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Audiowide')
    link(rel='stylesheet', type='text/css', href='//netdna.bootstrapcdn.com/font-awesome/latest/css/font-awesome.css')
    link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-select.css')
      
    block scripts
      script(type='text/javascript', src='//code.jquery.com/jquery-latest.min.js')
      script(type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/latest/js/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/bootstrap-select.js')

  body#back-to-top

    //- Header
    .jumbotron(style='background-color: #663399; color: white;')
      .container
        h1.text-uppercase survey small Example
        p(style='color: #DDD;').
          LIP-IT/Technik-Support Survey

    form.form(role='form', action='/survey', method='post', enctype='multipart/form-data', onsubmit='document.getElementById("submit").disabled=true;')
      .container
        .container-fluid

          //- Question 1 - textarea
          .panel.panel-default
            .panel-body(style='background-color: #EEE;')
              h3.panel-title 
                strong(style='color: #663399;') 1. Question
          .container-fluid
            .form-group
              textarea.form-control(name='question1', rows='5', placeholder='Type your answer', style='font-size: 18px;', required)

          hr

          //- Question 2 - input text
          .panel.panel-default
            .panel-body(style='background-color: #EEE;')
              h3.panel-title 
                strong(style='color: #663399;') 2. Question
          .container-fluid
            .form-group
              .input-group-lg
                input.form-control(name='question2', type='text' placeholder='Type your answer', required)

          hr

          //- Question 3 - radio
          .panel.panel-default
            .panel-body(style='background-color: #EEE;')
              h3.panel-title 
                strong(style='color: #663399;') 3. Question
          .container-fluid
            .form-group
              label.radio-inline
                input(name='question3', type='radio', required, value='foo')
                | foo
              label.radio-inline
                input(name='question3', type='radio', required, value='bar')
                | bar

          hr

          //- Question 4 - checkbox
          .panel.panel-default
            .panel-body(style='background-color: #EEE;')
              h3.panel-title 
                strong(style='color: #663399;') 4. Question
          .container-fluid
            .form-group
              .checkbox
                label
                  input(name='question4', type='checkbox', value='fuu')
                  | fuu
              .checkbox
                label
                  input(name='question4', type='checkbox', value='bars')
                  | bars
                  

          hr

          //- Question 5 - select drop down
          .panel.panel-default
            .panel-body(style='background-color: #EEE;')
              h3.panel-title 
                strong(style='color: #663399;') 5. Question
          .container-fluid
            .form-group
              select.form-control.selectpicker.show-tick.dropup(name='question5', required)
                option(value='option0', selected, disabled) Please make a choice
                option(value='option1') Option 1
                option(value='option2') Option 2
                option(value='option3') Option 3

          hr

          //- Submit
          .container-fluid
            .row
              .col-lg-9.col-md-9.col-sm-7
                .help-block.text-justify
                  p(style='color: #BBB;').
                    Note: The survey is completely anonymous and voluntary. The collected data are used only for statistical purposes.
              .col-lg-3.col-md-3.col-sm-5
                .form-group
                  .btn-group.btn-group-justified
                    .btn-group
                      button#submit.btn.btn-lg.btn-success(type='submit') Send Feedback

      //- Footer
      .jumbotron(style='background-color: #663399; color: white;')
        .container
          h5
            i.fa.fa-phone
            |  506
          h5
            i.fa.fa-home
            |  98/99  
          
          h5
            i.fa.fa-globe
            = ' '
            a(href='https://lipsupport.mpib-berlin.mpg.de', style='color: white;') https://lipsupport.mpib-berlin.mpg.de
          h5
            i.fa.fa-envelope
            = ' '
            a(href='mailto://lipsupport@mpib-berlin.mpg.de', style='color: white;') lipsupport@mpib-berlin.mpg.de
