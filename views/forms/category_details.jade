extends ../includes/header

block content

  .container
    include ../includes/message

    .row
      .col-xs-1.col-sm-1.col-md-1.col-lg-1
      .col-xs-10.col-sm-10.col-md-10.col-lg-10
        h1#category_details.anchor.page-header= title
          a.anchorjs-link(href='#category_details')
            span.anchorjs-icon
              i.fa.fa-link
          .btn-group.pull-right
            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
              = 'Manage '
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(title='Create Category' href='/settings/category/create')
                  i.fa.fa-plus
                  |  Add Category
              li
                a(title='Update Category' href='/settings/category/update/?name='+query.name+'&id='+query.id)
                  i.fa.fa-pencil
                  |  Edit
              li.divider
              li
                a#submit.btn-delete-dtl(title='Delete Category' href='#')
                  i.fa.fa-trash-o
                  |  Delete

        .container-fluid
          form(role='form' action='/settings/category/delete/confirm' method='post' enctype='multipart/form-data' onsubmit='return confirm("Are you sure you want to submit?")')
            input(type='hidden' name='id' value= query.id)
          table.table.table-condensed.table-hover.table-striped
            thead
              tr
                th Label
                th Detail
            tbody
              tr
                td.text-nowrap Name
                td
                  b= query.name
              tr
                td.text-nowrap Tabs
                td
                  each item in JSON.parse(query.list)
                    div= item.name
              tr
                td.text-nowrap Identifier
                td= query.id
              tr
                td.text-nowrap Revision
                td= query.rev
          
      .col-xs-1.col-sm-1.col-md-1.col-lg-1
