extends ../includes/header

block content

  .container
    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-4
      .col-xs-8.col-sm-8.col-md-6.col-lg-4
        h1.page-header= title

        .container-fluid
          form.form(action='/login', method='post', enctype='multipart/form-data', onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              label(for='username')| *Username:
              input#username.form-control(type='text', name='username', data-toggle='tooltip', data-placement='top', title='Username', required='required', placeholder='Username', autofocus)
            .form-group
              label(for='password')| *Password:
              input#password.form-control(type='password', name='password', data-toggle='tooltip', data-placement='top', title='Password', required='required', placeholder='Password')

            button#submit.btn.btn-primary.pull-right(type='submit', data-toggle='tooltip', data-placement='top', title='Submit')
              i.fa.fa-sign-in
              |  Login

      .col-xs-2.col-sm-2.col-md-3.col-lg-4
