extends ../includes/header

block content

  .container
    .row
      .col-xs-1.col-sm-3.col-md-4.col-lg-4
      .col-xs-10.col-sm-6.col-md-4.col-lg-4
        include ../includes/message
      .col-xs-1.col-sm-3.col-md-4.col-lg-4
    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-4
      .col-xs-8.col-sm-8.col-md-6.col-lg-4
        h1.page-header= title

        .container-fluid
          form.form(action='/login' method='post' enctype='multipart/form-data' onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              label(for='username')| Username:
              input#username.form-control(type='text' name='username' title='Username' required='required' placeholder='Username' autofocus)
            .form-group
              label(for='password')| Password:
              input#password.form-control(type='password' name='password' title='Password' required='required' placeholder='Password')

            button#submit.btn.btn-primary.pull-right(type='submit' title='Submit')
              i.fa.fa-sign-in
              |  Login

      .col-xs-2.col-sm-2.col-md-3.col-lg-4
