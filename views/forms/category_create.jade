extends ../includes/header

block content

  .container
    include ../includes/message

    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-3
      .col-xs-8.col-sm-8.col-md-6.col-lg-6
        h1.page-header= title

        .container-fluid
          form.form(action='/settings/category/create' method='post' enctype='multipart/form-data' onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              label(for='category')| Category Name:
              input#category.form-control(type='text' name='categoryname' title='Category Name' required='required' placeholder='Category Name' autofocus)

            button#submit.btn.btn-primary.pull-right(type='submit' title='Submit')
              i.fa.fa-upload
              |  Create

      .col-xs-2.col-sm-2.col-md-3.col-lg-3
