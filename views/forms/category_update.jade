extends ../includes/header

block content

  .container
    include ../includes/message

    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-3
      .col-xs-8.col-sm-8.col-md-6.col-lg-6
        h1.page-header= title

        .container-fluid
          form.form(action='/settings/category/update' method='post' enctype='multipart/form-data' onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              .row
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                  label(for='category')| Category Name:
                  input(type='hidden' name='id' value= query.id)
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                  .text-right
                    a(title='Category details and delete' href='/settings/category/details/?name='+query.name+'&list='+query.list+'&id='+query.id+'&rev='+query.rev)
                      | Details
              input#category.form-control(type='text' name='categoryname' title='Category Name (required)' value= query.name required='required' placeholder='Category Name (required)' autofocus)

            button#submit.btn.btn-primary.pull-right(type='submit' title='Submit')
              i.fa.fa-refresh
              |  Update

      .col-xs-2.col-sm-2.col-md-3.col-lg-3
