extends ../includes/header

block content

  .container
    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-3
      .col-xs-8.col-sm-8.col-md-6.col-lg-6
        h1#account_create.anchor.page-header= title
          a.anchorjs-link(href='#account_create')
            span.anchorjs-icon
              i.fa.fa-link

        .container-fluid
          form.form(action='/settings/account/create', method='post', enctype='multipart/form-data', onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              label(for='username')| *Username:
              input#username.form-control(type='text', name='username', data-toggle='tooltip', data-placement='top', title='Username', required='required', placeholder='Username', autofocus)
            .form-group
              label(for='password')| *Password:
              input#password.form-control(type='password', name='password', data-toggle='tooltip', data-placement='top', title='Password', required='required', placeholder='Password')
            .form-group
              label(for='confirm')| *Confirm Password:
              input#confirm.form-control(type='password', name='confirm', data-toggle='tooltip', data-placement='top', title='Confirm Password', required='required', placeholder='Confirm Password')
            .form-group
              label(for='role')| *Role:
              .input-group
                label.radio-inline
                  input(type='radio', name='role', data-toggle='tooltip', data-placement='top', title='Admin', required='required', value= 0)
                  | Admin
                label.radio-inline
                  input(type='radio', name='role', data-toggle='tooltip', data-placement='top', title='User', required='required', value= 1, checked= true)
                  | User

            button#submit.btn.btn-primary.pull-right(type='submit', data-toggle='tooltip', data-placement='top', title='Submit')
              i.fa.fa-upload
              |  Create

      .col-xs-2.col-sm-2.col-md-3.col-lg-3
