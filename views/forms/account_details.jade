extends ../includes/header

block content

  include ../includes/message

  form.form(action='/settings/account/delete/confirm' method='post' enctype='multipart/form-data' onsubmit='return confirm("Are you sure you want to submit?")')
    h3.formHeadline= title

    label| Username:
    input.details(type='text' name='username' title= user.username value= user.username readonly)

    label| Who Created:
    input.details(type='text' name='whoCreated' title= user.whoCreated value= user.whoCreated readonly)
    label| When Created:
    input.details(type='text' name='whenCreated' title= user.whenCreated value= user.whenCreated readonly)
    label| When Updated:
    input.details(type='text' name='whenUpdated' title= user.whenUpdated value= user.whenUpdated readonly)

    label| Salt Key:
    textarea.details.salt(name='salt' readonly)= user.salt
    label| Hash Key:
    textarea.details.hash(name='hash' readonly)= user.hash

    label| Identifier:
    input.details(type='text' name='id' title= user.id value= user.id readonly)
    label| Revision:
    input.details(type='text' name='rev' title= user.__v value= user.__v readonly)

    .btn-dlt-f
      a(title='Submit')
        i.fa.fa-trash-o
      | Delete
    noscript
      button.dlt-f(title='Submit')
        i.fa.fa-trash-o
        | Delete
    a.cancel(href='/settings' title='Cancel')| Cancel

  include ../includes/foot
