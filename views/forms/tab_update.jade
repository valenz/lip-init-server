extends ../includes/header

block content

  .container
    include ../includes/message

    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-3
      .col-xs-8.col-sm-8.col-md-6.col-lg-6
        h1.page-header= title

        .container-fluid
          form.form(action='/settings/tab/update' method='post' enctype='multipart/form-data' onsubmit='document.getElementById("submit").disabled=true;')
            .form-group
              label(for='renderAddress')| Render Address:
              input#renderAddress.form-control(type='url' name='renderUrl' title='Render Address' value= query.renderUrl required='required' placeholder='Render Address' autofocus)
            .form-group
              label(for='webAddress')| Web Address:
              input#webAddress.form-control(type='url' name='address' title='Web Address' value= query.url placeholder='Web Address')
            .form-group
              label(for='name')| Name:
              input#name.form-control(type='text' name='name' title='Name' value= query.name placeholder='Name')
            .form-group
              .row
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                  label(for='category')| Category:
                  input(type='hidden' name='id' value= query.id)
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                  .text-right
                    a(title='Create a category' href='/settings/category/create')
                      | Create Category
              select#category.form-control.selectpicker.show-tick.dropup(name='category' data-live-search='true')
                if(list.length > 0)
                  option(selected disabled)| Choose a category
                  each category in list
                    if category.name == query.category
                      option(value= category.name selected)= category.name
                    else
                      option(value= category.name)= category.name
                else
                  option(selected disabled)| No category created yet
            .row
              .col-sm-9.col-md-9.col-lg-10
                .checkbox
                  .text-right
                    label
                      input(type='checkbox' name='check' title='Access only for admins' checked= query.check ? true : false)
                      | Admin Tab
              .col-sm-3.col-md-3.col-lg-2
                button#submit.btn.btn-primary.pull-right(type='submit' title='Submit')
                  i.fa.fa-upload
                  |  Update

          p.help-block.text-justify
            | Depending on web page, the capturing may take a few seconds.
            | This page will reload when the process is complete.

      .col-xs-2.col-sm-2.col-md-3.col-lg-3
