.msg-close.text-center
  if grid
    - var check_i = 0
    - var check_a = 0
      each i in grid
        - i.check ? check_a++ : check_i++

  if error && error != 0
    each i in error
      .text-danger.thumbnail(style='background-color: #FFC2C2;')
        a.btn-link.pull-right
          i.fa.fa-times
        i.fa.fa-exclamation-circle
        |  #{i}

  if( title == 'Index' && check_i == 0 ) || user && ( title == user.username && check_a == 0 )
    .text-warning
      i.fa.fa-info-circle.fa-fw
      |  There are currently no Tabs available.

  noscript
    .text-primary.thumbnail(style='background-color: #E5F3FF;')
      i.fa.fa-info-circle
      |  You need to enable Javascript in order to use all features.

  .msg-fade
    if info && info != 0
      each i in info
        .text-primary.thumbnail(style='background-color: #E5F3FF;')
          a.btn-link.pull-right
            i.fa.fa-times
          i.fa.fa-info-circle
          |  #{i}

    if success && success != 0
      each i in success
        .text-success.thumbnail(style='background-color: #E1FFD1;')
          a.btn-link.pull-right
            i.fa.fa-times
          i.fa.fa-check-circle
          |  #{i}
