if grid
  - var check_i = 0
  - var check_a = 0
    each i in grid
      - i.check ? check_a++ : check_i++

if( title == 'Index' && check_i == 0 ) || user && ( title == user.username && check_a == 0 )
  .alert.alert-warning.text-center
    button.close(type="button", data-dismiss="alert", aria-label="Close")
      span(aria-hidden="true") &#215;
    i.fa.fa-info-circle
    |  There are currently no Tabs available.

noscript
  .alert.alert-info.text-center
    i.fa.fa-info-circle
    |  You need to enable Javascript in order to use all features.

if info && info != 0
  .modal.fade.msg-modal-sm(tabindex="-1", role="dialog", aria-labelledby="mySmallModalLabel", aria-hidden="true")
    .modal-dialog.modal-sm
      .modal-content
        .modal-body.alert-info
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &#215;
          each i in info
            .nachricht
              i.fa.fa-info-circle
              |  #{i}

if success && success != 0
  .modal.fade.msg-modal-sm(tabindex="-1", role="dialog", aria-labelledby="mySmallModalLabel", aria-hidden="true")
    .modal-dialog.modal-sm
      .modal-content
        .modal-body.alert-success
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &#215;
          each i in success
            .nachricht
              i.fa.fa-check-circle
              |  #{i}

if error && error != 0
  .modal.fade.msg-modal-sm(tabindex="-1", role="dialog", aria-labelledby="mySmallModalLabel", aria-hidden="true")
    .modal-dialog.modal-sm
      .modal-content
        .modal-body.alert-danger
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &#215;
          each i in error
            .nachricht
              i.fa.fa-exclamation-circle
              |  #{i}

script(type='text/javascript').
  $('.msg-modal-sm').modal();
  $(".modal-backdrop").remove();
