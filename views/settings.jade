extends header

block content

	#adjustments
		if user
			h3| Token
			.adj.clearfix
				code(style='word-break: break-all;')= user
			
		h3
			span#adjReset(title='Reset')
				i.fa.fa-eraser
			| Adjustments
		code#rangeMsg
		.adj.clearfix
			div
				span| Range: 
				span#rangeFac
			#rangeLeft| 1
			#rangeRight| 1.5
			input(type="range" min="1" max="1.5" step="0.01")
		
		if user
			h3| Security
			.adj.clearfix
				form.SETForm(action='/security' method='post' enctype='multipart/form-data')
					.elemcol
						.elemrow
							span| Login
							input#seclog(type="checkbox" name="login" checked=sets[0].login)
						.elemrow
							span| Test
							input(type="checkbox" name="test" checked="checked")

		if !sets[0].login || user
			h3| (
				= accs.length
				| ) Accounts
			.adj.clearfix
				a#create-user(rel='leanModal' name='createUser' title='Create user' href='#createUser')
					.item.itemfloat| +
				each item, j in accs
					a(href="settings/"+item._id)
						if user && item.username == user.username
							.item.itemfloat#user(data-item=j)= item.username
						else
							.item.itemfloat(data-item=j)= item.username

		if tabs.length != 0
			h3| (
				= tabs.length
				| ) Tabs
			.adj.clearfix
				each item, j in tabs
					a(href="settings/"+item._id)
						.item.itemfloat(data-item=j)= item.name

	include footer