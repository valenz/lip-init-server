extends header

block content

	if grid.length != 0
		mixin tabs(id, url, title, icon, name, j)
			li.tabs(data-item=j)
				form.tab-form(action='/remove' method='post' enctype='multipart/form-data')
					div
						a(href=url title=title?title:name)
							if icon
								img.icon(src=icon)
							div.img-container
								if icon
									img.pic(src='uploads/' + id+'.png')
							h5= name
							input(type='hidden' name='tabId' value=id)
						if user
							i.btn-edit.fa.fa-pencil(title='Edit tab')
							i.btn-del.fa.fa-times(title='Remove tab')
		
		ul#grid(data-length=grid.length)
			each item, j in grid
				+tabs(item._id, item.url, item.title, item.icon, item.name, j)
	else
		p.no-data
			i.fa.fa-info-circle.fa-fw
			| Currently no tabs are available, but you can add one now by sign in and simply clicking on the plus icon in the menu.

	include includes/foot