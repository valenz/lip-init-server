extends header

block content
	#head
	
	.TTWForm
		#tab-add
			input(type='button' value='New tab')

	.TTWForm-container
		form.TTWForm(action='/api/upload' method='post' enctype='multipart/form-data')
			#field8-container.field.f_100
				input#field8(type='url' name='tabTextUrl' required='required' placeholder='http://')
			
			#field2-container.field.f_100
				input#field2(type='text' name='tabTextName' placeholder='Name (optional)')
				
			#form-submit.field.f_100.clearfix.submit
				#loading
				input(type='submit' value='Upload')
				input(type='button' value='Cancel')
	
	p.message
		if error
			= error

	ul
		each tabs, i in grid
			each item, j in tabs
				li.tabs
					div
						img.btn-edit(src='images/edit-16-888.ico')
						img.btn-del(src='images/delete-16-888.ico')
						form.TABForm(action='/api/option' method='post' enctype='multipart/form-data')
							a(href=item.url)
								img.pic(src=item.img width='144' height='81')
								input(type='text' name=j value=item.name disabled)

	#foot
		p STEPHAN WEGNER 2014
		p
			a(href='http://intra/en')
				|Intranet
			|&nbsp;| 
			a(href='http://www.mpib-berlin.mpg.de')
				|Max Planck Institut for Human Development
			|&nbsp;|&nbsp;
			a(href='mailto:lipsupport@mpib-berlin.mpg.de')
				|LIP Support
