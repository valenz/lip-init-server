extends includes/header

block content

  .container
    if grid && grid.length != 0
      - for (var i = list.length; i >= 0 ; --i) {
        if list[i] && list[i].list.length > 0
          h2.page-header= list[i].name
            span.small|  (
              = list[i] ? list[i].list.length : grid.length-assigned-admintabs
              | )
        if !list[i] && grid.length-assigned-admintabs > 0
          h2.page-header| unassigned
            span.small|  (
              = grid.length-assigned-admintabs
              | )
        ul.list-unstyled.container-fluid.grid(name= list[i] ? list[i].name : 'unassigned' data-length= list[i] ? list[i].list.length : grid.length-assigned-admintabs)
          each item, j in grid
            if list[i] && list[i].name == item.category
              +tabs(item._id, item.renderUrl, item.url, item.title, item.icon, item.image, item.name, item.category, item.check, j)
            else if !list[i] && !item.category
              +tabs(item._id, item.renderUrl, item.url, item.title, item.icon, item.image, item.name, item.category, item.check, j)
      - }
    if !grid.length-assigned-admintabs
      .row
        .col-xs-1.col-sm-3.col-md-4.col-lg-4
        .col-xs-10.col-sm-6.col-md-4.col-lg-4
          include includes/message
        .col-xs-1.col-sm-3.col-md-4.col-lg-4

  mixin tabs(id, renderUrl, url, title, icon, image, name, category, check, j)
    if !check
      li.tabs(data-item= j)
        form.form.tab-form(role='form' action='/settings/tab/delete/confirm' method='post' enctype='multipart/form-data' onsubmit='return confirm("Are you sure you want to submit?")')
          input(type='hidden' name='id' value= id data-check='unchecked')
          if user
            .mng-fa
              a.btn-edit(title='Edit tab' href='/settings/tab/update/?id='+id+'&renderUrl='+renderUrl+'&url='+url+'&name='+name+'&category='+category)
                i.fa.fa-pencil
              a.btn-delete(title='Remove tab')
                i.fa.fa-times
          a(href= url ? url : renderUrl title= title ? title : name)
            img.img-thumbnail(src='uploads/'+ image)
            .mng-vis
              img.img-rounded.center-block(src= icon width='13px')
              p.text-center.name.break= name
