extends ../includes/header

block content

  .content.container
    .row
      .col-xs-1.col-sm-3.col-md-4.col-lg-4
      .col-xs-10.col-sm-6.col-md-4.col-lg-4
        include ../includes/message
      .col-xs-1.col-sm-3.col-md-4.col-lg-4
    .row
      .col-xs-2.col-sm-2.col-md-3.col-lg-3
      .col-xs-8.col-sm-8.col-md-6.col-lg-6
        h1.page-header= title

        form.form(action= action method='post' enctype='multipart/form-data' onsubmit='document.getElementById("submit").disabled=true;')
          .row
            .col-md-6
              p| Are you sure you want to submit?
              input.form-control(type='hidden' name='id' value= confirm.id)
            .col-md-6
              .pull-right
                button#submit.btn.btn-danger(type='submit' title='Submit')
                  i.fa.fa-trash-o
                  |  Delete

      .col-xs-2.col-sm-2.col-md-3.col-lg-3
